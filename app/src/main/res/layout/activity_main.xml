<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Page"
            android:textAlignment="center"
            android:layout_marginTop="20pt"
            android:layout_marginBottom="5pt"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12pt"
            android:layout_marginRight="12pt"
            android:layout_marginTop="7pt"
            android:ems="10"

            android:hint="Input username" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12pt"
            android:layout_marginRight="12pt"
            android:ems="10"
            android:inputType="text"
            android:hint="Input Password" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12pt"
            android:layout_marginRight="12pt"
            android:text="Login"
            android:layout_marginTop="5pt"/>

        <Button
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12pt"
            android:layout_marginRight="12pt"
            android:text="List View"
            android:layout_marginTop="5pt"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12pt"
            android:layout_marginRight="12pt"
            android:text="recycle view"
            android:id="@+id/btnrv"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12pt"
            android:layout_marginRight="12pt"
            android:text="Recycle Buah"
            android:id="@+id/btnbuah"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12pt"
            android:layout_marginRight="12pt"
            android:text="Recycle Movie"
            android:id="@+id/btnMovie"/>

    </LinearLayout>

</LinearLayout>